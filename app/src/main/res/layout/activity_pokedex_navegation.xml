<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.pokedexGPS.PokedexNavegationActivity" android:background="@color/white">

    <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/volver" android:id="@+id/imageButton3"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#00000000"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="SpeakableTextPresentCheck" android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@+id/textStatus"
            android:onClick="onClickBack"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="300dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:scaleType="fitCenter" android:background="@color/white"/>
    <TextView
            android:layout_width="0dp"
            android:elevation="15dp"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:text="@string/text_inidcacion"
            android:textAlignment="center" android:textSize="20sp" android:padding="5dp" android:textStyle="bold"
            android:textColor="@color/white" android:background="@color/fantasma"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textStatus"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold" android:textSize="20sp" android:background="@color/white"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp" app:srcCompat="@drawable/grass" android:id="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="@+id/imageView"
            android:layout_marginTop="240dp" android:scaleType="centerCrop"/>
</androidx.constraintlayout.widget.ConstraintLayout>